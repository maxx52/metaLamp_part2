extends ../template

block title
  title Отель "Toxin" | Компоненты

block styles
  link(rel="stylesheet", href="ui-kit.sass")

block content
  include ../mixins

  main
    include colors-type/colors-type

    img.logo(src="img/logo.svg", alt="logo")
    .form-elements
      .container
        .fields
          .t-field
            +field-label('text field', 'fieldDefault')(placeholder="Email")
          .t-field
            +field-label('text field', 'fieldHover')(value="Thi is pretty awesome")
          .t-field
            +field-dropdown('text field', 'dropdown')(value="Сколько гостей")
          .t-field
            +field-masked('Masked text field', 'masked', 't-field-dropdown')(placeholder="ДД.ММ.ГГГГ")
          +field-group('t-field', 'date Dropdown', 'arrival', 'date Dropdown', 'checkOut', '', '19.03.2019')(placeholder="ДД.ММ.ГГГГ")
          .t-field
            +field-dropdown('filter date dropdown', 'filterDate')(value="4 мар - 15 мар")
          .t-field
            +field-arrow('subscription text field', 'subscr')(type="email" placeholder="Email")
        .buttons
          .buttons-checkbox
            h3 Checkbox Buttons
            .checkbox-example
              +checkbox('Можно курить', 'smoke')
              +checkbox('Можно с питомцами', 'pets', 1)
              +checkbox('Можно пригласить гостей (до 10 человек)', 'guests', 1)
          .buttons-radio
            h3 Radio buttons
            .radio-example
              include ../../components/buttons/radio/radio
          .buttons-toggle
            h3 Toggle
            .toggle-example
              +btn-toggle('Получать спецпредложения', 'offer')(checked)
            .toggle-example
              +btn-toggle('Получать спецпредложения', 'offer2')
          .buttons-like
            h3 Like Button
            .like-group
              +like('12')
              +like('12', true)
          .buttons-rate
            h3 Rate Button
            .rate-group
              +rate(1)
              +rate(1)
              +rate(1)
              +rate(1)
              +rate()
            .rate-group
              +rate(1)
              +rate(1)
              +rate(1)
              +rate(1)
              +rate(1)
          include ../../components/range-slider/range-slider