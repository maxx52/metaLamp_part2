block title
	title Отель "Toxin" | Компоненты

block styles
	link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
	link(rel="stylesheet", href="ui-kit.sass")

block content
	.logo
		img(src="../../components/logo-m.svg", alt="Toxin")
	.container-flex
		.colors
			ul.colors-list
				-
					let text= [
						{text: 'Dark Shade 100%', code: '#1F2041'},
						{text: 'Dark Shade 75%', code: '#1F2041'},
						{text: 'Dark Shade 50%', code: '#1F2041'},
						{text: 'Dark Shade 25%', code: '#1F2041'},
						{text: 'Dark Shade 5%', code: '#1F2041'},
						{text: 'Purple', code: '#BC9CFF'},
						{text: 'Green', code: '#6FCF97'}
					];
				each element, n in text
					li.colors-list-item
						div(class="colors-box-" + n, style="width: 70px; height: 70px;border-radius: 6px; margin-bottom: 20px")
						.colors-title
							span.colors-title-description #{element.text}
							span.colors-title-code #{element.code}

		.type
			ul.type-list
				-
					let type= [
						{h: 'H1', text: 'This one is the sub-section or widget title'},
						{h: 'H2', text: 'Next one is the item title inside widgets'},
						{h: 'H3', text: 'This is a label or CTA text'},
						{h: 'Body', text: 'This is the body text which is used for most of the design, like paragraphs, lists, etc.'}
					]
				each el, i in type
					li.type-list-item
						span(class="type-box-" + i, style="color: rgba(31, 32, 65, 0.25); margin-right: 30px; text-align: right; min-width: 50px; margin-bottom: 51px") #{el.h}
						span(class="type-title-" + i) #{el.text}
	
	.logo-1
		img(src="../../components/logo-m.svg", alt="Toxin")
	.container-flex
		.column
			include fields/fields
			+field({theme: "has-label", className: "field-default", type: "email", text: "Text field", title: "Default", placeholder: "Email"})
			+field({theme: "has-label", className: "field-default", type: "text", placeholder: "This is pretty awesome", text: "Text field", title: "Hover / Focus"})
			+field({theme: "dropdown", className: "field-dropdown", text: "Dropdown", placeholder: "Сколько гостей"})
			+field({theme: "masked", className: "field-masked", text: "Masked text field", placeholder: "ДД.ММ.ГГГГ"})
			.date-dropdown
				.arrival
					+field({theme: "masked", className: "field-masked__short", text: "Date dropdown", placeholder: "ДД.ММ.ГГГГ"})
					span(class="material-icons") expand_more
				.arrival
					+field({theme: "masked", className: "field-masked__short", text: "Date dropdown", placeholder: "ДД.ММ.ГГГГ"})
					span(class="material-icons") expand_more
			+field({theme: "dropdown", className: "field-dropdown", text: "filter date dropdown", placeholder: "19 авг - 23 авг", icon: "expand_more"})
			+field({theme: "has-arrow", className: "field-subscribe", type: "email", text: "subscription text field", placeholder: "Email", icon: "arrow_forward"})
		.column
			include ../../components/buttons/buttons
			+checkbox({className: "input", text: "Checkbox Buttons", id: "smoke", title: "Можно курить"})
			+checkbox({className: "input", id: "pets", title: "Можно с питомцами"})
			+checkbox({className: "input", id: "guests", title: "Можно пригласить гостей (до 10 человек)"})
			.radio-buttons
				+radio({classRadio: "radio-btn", classLabel: "radio-label", name: "radio-mf", label: "Radio Buttons", text: "Мужчина", id: "male"})
				+radio({classRadio: "radio-btn", classLabel: "radio-label", name: "radio-mf", text: "Женщина", id: "female"})
			.toggle-buttons
				+toggle({classInput: "toggle-input", classLabel: "toggle-label", title: "Toggle", id: "t1", text: "Получать спецпредложения"})
				+toggle({classInput: "toggle-input", classLabel: "toggle-label", id: "t2", text: "Получать спецпредложения"})
			.like-buttons
				label.label-like Like button
					.block-btn
						span.like-btn
							span.material-icons favorite_border
							span.digit 2
							input(type="button")
						span.like-btn
							span.material-icons favorite
							span.digit 12
							input(type="button")
			.rate-buttons
				label.label Rate button
					.star-rating
						.star-rating__wrap
							each el in ['5', '4', '3', '2', '1']
								input.star-rating__input(type="radio", value=el, id="star-rating-" + el)
								label.star-rating__ico.material-icons(for="star-rating-" + el) star_rate
							each el in ['5', '4', '3', '2', '1']
								input.star-rating__input(type="radio", value=el, id="star-rating-" + el)
								label.star-rating__ico.material-icons(for="star-rating-" + el) star_outline
		.column
			.range-slider
				label.label Range slider
				span.range-slider-price 5 000₽ - 10 000₽
				.range-slider__body
					.range-slider__active
			.buttons-btn
				label.label Buttons
				.buttons-gradient
					a.btn.btn-gradient(href="#") Click me
					a.btn.btn-gradient__active(href="#") Click me
				.buttons-not-gradient
					a.btn.btn-not-gradient(href="#") Click me
					a.btn.btn-not-gradient__active(href="#") Click me
				.buttons-simple
					a.btn-simple-purple(href="#") Click me
					a.btn-simple(href="#") Click me
				.button-arrow
					a.arrow-btn(href="#") Перейти к оплате
			.pagination
				h4.label Pagination
				ul.pagination-list
					each num in ['1', '2', '3', '...', '15']
						li.pagination-list-item: a.pagination-list-link(href="#") #{num}
					li.pagination-list-item: span.material-icons arrow_forward
				p.pagination-title 1 – 12 из 100+ вариантов аренды
		.column
			.dropdown
				+field({theme: "dropdown", className: "field-dropdown", placeholder: "2 спальни, 2 кровати...", text: "Dropdown", icon: "expand_more"})
				+field({theme: "dropdown", className: "field-dropdown", placeholder: "2 спальни, 2 кровати...", text: "Dropdown", icon: "expand_more"})
				.dropdown-expand
					span.dropdown-expand__item Спальни
						span.dropdown-expand__value 2
					span.dropdown-expand__item Кровати
						span.dropdown-expand__value 2
					span.dropdown-expand__item Ванные комнаты
						span.dropdown-expand__value 0
				.expandable-checkbox-list
					h4.label Expandable checkbox list
					span.material-icons expand_more
				.expandable-checkbox-list
					h4.label Expandable checkbox list
					span.material-icons expand_less
					.expand-checkbox
						each text, i in ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']
							input.checkbox-item__input(type="checkbox", name="check", id="cb" + i)
							label.checkbox-label(for="cb" + i) #{text}
							if (i == 2 || i == 3 || i == 4)
								input.checkbox-item__input(type="checkbox", name="check", id="cb" + i, checked)
			.icons
				.icons-item
					span.material-icons insert_emoticon
					span.icons-item-title Комфорт
						span.icons-item-description Шумопоглощающие стены
				.icons-item
					span.material-icons location_city
					span.icons-item-title Удобство
						span.icons-item-description Окно в каждой из спален
		.column
			.dropdown
				+field({theme: "dropdown", className: "field-dropdown", placeholder: "Сколько гостей", icon: "expand_more", text: "Dropdown"})
				.dropdown-expand-1
					span.dropdown-expand__item Взрослые
						span.dropdown-expand__value 0
					span.dropdown-expand__item Дети
						span.dropdown-expand__value 0
					span.dropdown-expand__item Младенцы
						span.dropdown-expand__value 0
					.dropdown-expand-1__btn
						a.btn-simple-purple(href="#") Применить
			.rich-checkbox
				h4.label Rich checkbox buttons
				.rich-checkbox-block
					input.rich-checkbox__input(type="checkbox" name="rti" id="rti1")
					label.checkbox-label Широкий коридор
						span.checkbox-title Ширина коридоров в номере не менее 91 см.
				.rich-checkbox-block
					input.rich-checkbox__input(type="checkbox" name="rti" id="rti2")
					label.checkbox-label Помощник для инвалидов
						span.checkbox-title На 1 этаже вас встретит специалист и проводит до номера.
			.testimonials
				.user-info
					.avatar
					p.name Мурад Сарафанов
						span.activity 5 дней назад
				.testimonials-content
					.like-button
						span.like-btn
							span.material-icons favorite
							span.digit 12
							input(type="button")
					.testimonials-content__text
						p.text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.
		.column
			.dropdown
				+field({theme: "dropdown", className: "field-dropdown", placeholder: "3 гостя", icon: "expand_more", text: "Dropdown"})
				.dropdown-expand-1
					span.dropdown-expand__item Взрослые
						span.dropdown-expand__value 0
					span.dropdown-expand__item Дети
						span.dropdown-expand__value 0
					span.dropdown-expand__item Младенцы
						span.dropdown-expand__value 0
					.dropdown-expand-1__btn
						a.btn-simple-purple(href="#") Очистить
						a.btn-simple-purple(href="#") Применить
			.bullet-list
				h4.label Bullet list
				ul.bullet-list-block
					each text in ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']
						li.bullet-list__item #{text}
			
