mixin btn-gradient(classes, text)
  a(class="btn btn-gradient " + classes href="#")&attributes(attributes)= text

mixin btn-not-gradient(classes, text)
  a(class="btn btn-not-gradient " + classes href="#")&attributes(attributes)= text

mixin link(classes, text)
  a(class="default-link" + classes href="#")&attributes(attributes)= text

mixin btn-arrow(classes, text)
  a(class="btn btn-gradient btn-arrow " + classes href="#")&attributes(attributes)= text
